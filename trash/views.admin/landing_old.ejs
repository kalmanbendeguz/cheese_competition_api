<!DOCTYPE html>
<html lang="hu">

<head>
	<!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Admin</title>
	<link rel="icon" type="image/x-icon" href="/assets/css/MSE_1_32x32.png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/style_2.css">
</head>

<body>
	<%- include('header') %>
<div class="container-xxl bd-gutter mt-3 my-md-4 bd-layout">
	<main class="bd-main order-1">
		<%- include('feedback') %>
                <div class="table-responsive-sm">
                    <% if(cheeses.length === 0) { %>
                    <div>Még nem neveztek egy sajtot sem.</div>
                    <% } else { %>
                    <div>Nevezett sajtok:</div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Sorszám</th>
                                <th scope="col">Készítő / Sajtműhely</th>
                                <th scope="col">Kategória</th>
                                <th scope="col">Átvéve</th>
                                <th scope="col">Lehetőségek</th>
                                <th scope="col">Pontszám</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% cheeses.forEach(cheese => { %>
                            <tr>
                                <td><%= cheese.public_id %></td>
                                <td><%= cheese.factory_name %></td>
                                <td><%= category_dictionary[cheese.product_category_list[0]] %> / <%= category_dictionary[cheese.product_category_list.at(-1)] %></td>
                                <td></td>
                                <td></td>
                                <td><%= cheese.score %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                    <% } %>
             </div>
	    </main>
    </div>
    <div class="col"><a href="/cheeses" class="nav-link">Nevezett sajtok</a></div>
    <div class="col"><a href="/results" class="nav-link">Eredmények</a></div>

	<%- include('footer') %>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>