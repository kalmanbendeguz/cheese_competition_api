<!DOCTYPE html>
<html lang="hu">

<head>
	<!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Bírák | Admin</title>
	<link rel="icon" type="image/x-icon" href="/assets/css/MSE_1_32x32.png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/style_2.css">
	<link rel="stylesheet" href="/assets/css/th_mouseover.css">
	<script src="/assets/scripts/sort_table.js" defer></script>
	<script src="/assets/scripts/judges/judges.js" defer></script>
	<script src="/assets/scripts/judges/allowed_judge_email_dialog.js" defer></script>
</head>

<body>
	<%- include('header') %>

	<main class="container-fluid text-center">
		<div class="container col-12 col-sm-12 col-md-8 col-lg-4 col-xl-4 col-xxl-4">
			<%- include('feedback') %>
		</div>

		<% if(allowed_judges.length === 0) { %>
		<div>Még nincs egy bíra sem az engedélyezett bírák között.</div>
		<% } else { %>
		<div class="col-12 h3 mb-3 fw-normal">
			Engedélyezett bírák
		</div>
		<div class="col-12 h5 mb-2 fw-normal">
			Regisztrált bírák száma: <%= judges.length %>/<%= allowed_judges.length %>
		</div>

		<!--div id="add_allowed_judge">
			<a href="/add_allowed_judge" class="btn btn-primary disabled">Új engedélyezett bíra</a>
		</div-->

		<div class="text-center">
			<button class="w-20 btn btn-lg btn-primary mb-3 mt-3" id="add_allowed_judge_button">Új engedélyezett bíra</button>
		</div>

		<dialog class="border-0 rounded shadow" id="allowed_judge_email_dialog">
			<div class="container">
				<div class="row justify-content-center">
					<form class="row g-3 justify-content-center text-center" action="/add_allowed_judge" id="add_allowed_judge_form" method="POST">

						<div class="col-12 col-sm-7 h5 mb-2 ">
							<label class="form-label" for="new_allowed_judge_email">Új bíra e-mail címe</label>
						</div>

						<div class="col-12 col-sm-7 mb-3 ">
							<input class="form-control" type="text" id="new_allowed_judge_email" name="new_allowed_judge_email" placeholder="ujbira@gmail.com" required>
						</div>

						<!-- Mégse gomb  -->
						<div class="col-12 col-sm-6">
							<button class="w-100 btn btn-sm btn-primary" id="cancel_allowed_judge_email_button" type="reset">Mégse</button>
						</div>

						<!-- OK gomb  -->
						<div class="col-12 col-sm-6">
							<button class="w-100 btn btn-sm btn-primary" id="submit_allowed_judge_email_button" type="submit">OK</button>
						</div>

					</form>
				</div>
			</div>
		</dialog>
		<div style="display: flex; justify-content: center;">
			<div style="overflow-x:auto;">
				<form action="/judges" id="judges_form" method="POST">
					<table id="allowed_judges_table" class="table table-striped table-bordered table-hover table-responsive">
						<thead>
							<tr>
								<th id="table_judge_email_header" data_sort="lexicographic">
									<span>E-mail</span>
									<%- include('sorting_arrows') %>
								</th>
								<th id="table_judge_registered_header" data_sort="lexicographic">
									<span>Regisztrált</span>
									<%- include('sorting_arrows') %>
								</th>
								<th id="table_judge_name_header" data_sort="lexicographic">
									<span>Név</span>
									<%- include('sorting_arrows') %>
								</th>
								<!--th id="table_judges_options_header">
                            <span>Lehetőségek</span>
                        </th-->
								<th id="table_judges_arrived_header">
									<span>Megérkezett</span>
								</th>
								<th id="table_judges_table_leader_header">
									<span>Asztalvezető</span>
								</th>
							</tr>
						</thead>
						<tbody>
							<% allowed_judges.forEach(allowed_judge => { %>
							<tr>
								<td class="table_judge_email_cell"><%= allowed_judge.email %></td>
								<td class="table_judge_registered_cell">
									<% if(allowed_judge.registered) { %>
									<div style="color:green; font-weight: bolder; font-size: larger;">&#10003;</div>
									<% } else { %>
									<div style="color:red; font-weight: bolder; font-size: large;">&#9587;</div>
									<% } %>
								</td>
								<td class="table_judge_name_cell"><%= allowed_judge.judge ? allowed_judge.judge.full_name : '-' %></td>
								<!--td class="table_judges_options_cell">
                            <form action="/remove_allowed_judge" class="remove_allowed_judge_form" method="GET">
                                <input type="hidden" name="allowed_judge_email" value="<%= allowed_judge.email %>">
                                <input class="btn btn-primary disabled" type="submit" value="Törlés">
                            </form>
                        </td-->
								<td class="table_arrived_cell">
									<!-- <input type="checkbox" id="table_arrived_checkbox" name="arrived">-->
									<% if(allowed_judge.registered) { %>
									<input <% if(allowed_judge.judge?.table_arrived ?? false) { %> checked <% } %> class="form-check-input flex-shrink-0 table_arrived_checkbox" name="table_arrived_<%= allowed_judge.judge?.email %>" type="checkbox" id="table_arrived_<%= allowed_judge.judge?.email %>">
									<% } else { %>
									<input disabled class="form-check-input flex-shrink-0 table_arrived_checkbox" type="checkbox">
									<% } %>
								</td>
								<td class="table_judge_table_leader_cell">
									<% if(allowed_judge.registered) { %>
									<input <% if(allowed_judge.judge?.table_leader ?? false) { %> checked <% } %> class="form-check-input flex-shrink-0 table_leader_checkbox" name="table_leader_<%= allowed_judge.judge?.email %>" type="checkbox" id="table_leader_<%= allowed_judge.judge?.email %>">
									<% } else { %>
									<input disabled class="form-check-input flex-shrink-0 table_leader_checkbox" type="checkbox">
									<% } %>

								</td>

							</tr>
							<% }) %>
						</tbody>
					</table>
					<div class="col-12 text-center"><input class="mt-5 w-50 btn btn-lg btn-primary" type="submit" id="submit_judges_button" value="Mentés"></div>
				</form>
			</div>
		</div>
		<% } %>
	</main>

	<%- include('footer') %>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>