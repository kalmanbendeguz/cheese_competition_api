<!DOCTYPE html>
<html lang="hu">

<head>
	<!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Versenyzők | Admin</title>
	<link rel="icon" type="image/x-icon" href="/assets/css/MSE_1_32x32.png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/style_2.css">
	<link rel="stylesheet" href="/assets/css/th_mouseover.css">
	<script src="/assets/scripts/sort_table.js" defer></script>
</head>

<body>
	<%- include('header') %>

	<main class="container-fluid text-center">
		<div class="container text-center col-6">
			<%- include('feedback') %>
		</div>

		<% if(users.length === 0) { %>
		<div>Még nem regisztrált egy versenyző sem.</div>
		<% } else { %>
		<div class="col-12 h3 mb-3 fw-normal">
			Regisztrált versenyzők
		</div>
		<div class="col-12 h5 mb-2 fw-normal">
			Regisztrált versenyzők száma: <%= users.length %>
		</div>

		<div style="display: flex; justify-content: center;">
			<div style="overflow-x:auto;">
				<table id="users_table" class="table table-striped table-bordered table-hover table-responsive">
					<thead>
						<tr>
							<th id="table_user_email_header" data_sort="lexicographic">
								<span>E-mail</span>
								<%- include('sorting_arrows') %>
							</th>
							<th id="table_user_full_name_header" data_sort="lexicographic">
								<span>Teljes név</span>
								<%- include('sorting_arrows') %>
							</th>
							<th id="table_user_contact_phone_number_header">
								<span>Telefonszám</span>
							</th>
							<th id="table_user_registered_cheese_number_header" data_sort="numeric">
								<span>Nevezett termékek száma</span>
								<%- include('sorting_arrows') %>
							</th>
							<th id="table_user_registered_cheese_number_header" data_sort="lexicographic">
								<span>Egyesületi tag</span>
								<%- include('sorting_arrows') %>
							</th>
						</tr>
					</thead>
					<tbody>
						<% users.forEach(user => { %>
						<tr>
							<td class="table_user_email_cell"><%= user.email %></td>
							<td class="table_user_full_name_cell"><%= user.full_name %></td>
							<td class="table_user_contact_phone_number_cell"><%= user.contact_phone_number %></td>
							<td class="table_user_registered_cheese_number_cell"><%= user.registered_cheese_number %></td>
							<td class="table_user_association_member">
								<% if(user?.association_member ?? false) { %>
								<div style="color:green; font-weight: bolder; font-size: larger;">&#10003;</div>
								<% } else { %>
								<div style="color:red; font-weight: bolder; font-size: large;">&#9587;</div>
								<% } %>
							</td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
		</div>
		<% } %>
	</main>

	<%- include('footer') %>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>