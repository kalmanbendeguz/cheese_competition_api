<!DOCTYPE html>
<html lang="hu">

<head>
	<!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Eredmények | Admin</title>
	<link rel="icon" type="image/x-icon" href="/assets/css/MSE_1_32x32.png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/style_2.css">
	<link rel="stylesheet" href="/assets/css/th_mouseover.css">
	<script src="/assets/scripts/sort_table.js" defer></script>
	<script src="/assets/scripts/view_results/fresh_or_matured_filter.js" defer></script>

</head>

<body>
	<%- include('header') %>

	<main class="container-fluid text-center">
		<%- include('feedback') %>

		<% if(cheeses.length === 0) { %>
		<div class="col-12 h3 mb-3 fw-normal">
			Még nem neveztek egy sajtot sem.
		</div>
		<% } else { %>
		<div class="col-12 h3 mb-3 fw-normal text-center">
			Eredmények
		</div>
		<div class="mb-4">
			<div id="export_results">
				<a href="/export_results" class="btn btn-primary">Eredmények exportálása</a>
			</div>
		</div>
		<div class="mb-4">
			<div id="export_results_by_counties_table">
				<a href="/export_results_by_counties_table" class="btn btn-primary">Eredmények megyénkénti eloszlása</a>
			</div>
		</div>



		<div class="container col-xxl-2 col-xl-2 col-lg-4 col-sm-4 col-12">
			<div class="text-center">
				Szűrés
			</div>
			<div class="text-center">
				<label class="form-label list-group-item" for="fresh">
					<input checked class="form-check-input me-1" type="checkbox" maturation_time_type_filter value="fresh">
					Friss
				</label>

				<label class="form-label list-group-item" for="matured">
					<input checked class="form-check-input me-1" type="checkbox" maturation_time_type_filter value="matured">
					Érlelt
				</label>
			</div>
		</div>

		<div style="overflow-x:auto;">
			<table id="view_results_table" class="table table-striped table-bordered table-hover table-responsive">
				<thead>
					<tr>
						<th id="table_public_id_header" data_sort="lexicographic">
							<span>Publikus azonosító</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_secret_id_header" data_sort="lexicographic">
							<span>Titkos azonosító</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_factory_name_header" data_sort="lexicographic">
							<span>Készítő / Sajtműhely</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_product_name_header" data_sort="lexicographic">
							<span>Megnevezés</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_category_header" data_sort="lexicographic">
							<span>Kategória</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_average_score_header" data_sort="numeric">
							<span>Átlagpontszám</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_number_of_ratings_header" data_sort="numeric">
							<span>Bírálatok száma</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_fresh_or_matured_header" data_sort="lexicographic">
							<span>Friss / Érlelt</span>
							<%- include('sorting_arrows') %>
						</th>
						<th id="table_goldsilverbronze_header">
							<span>Érem</span>
						</th>
						<th id="results_table_options_header">
							<span>Lehetőségek</span>
						</th>
					</tr>
				</thead>
				<tbody>
					<% cheeses.forEach(cheese => { %>
					<tr <%= cheese.maturation_time_type %>>
						<td class="table_public_cell"><%= cheese.public_id %></td>
						<td class="table_secret_id_cell"><%= cheese.secret_id %></td>
						<td class="table_factory_name_cell"><%= cheese.factory_name %></td>
						<td class="table_product_name_cell"><%= cheese.product_name %></td>
						<td class="table_category_cell"><%= category_dictionary[cheese.product_category_list[0]] %> / <%= category_dictionary[cheese.product_category_list.at(-1)] %></td>

						<td class="table_average_score_cell"><%= isNaN(cheese.average_score) ? '-' : Math.round(cheese.average_score) %></td>
						<td class="table_number_of_ratings_cell"><%= cheese.number_of_ratings %></td>
						<td class="table_fresh_or_matured_cell">
							<% if(cheese.maturation_time_type === 'fresh') { %>
							Friss
							<% } else if(cheese.maturation_time_type === 'matured') { %>
							Érlelt
							<% } %>
						</td>
						<td class="table_goldsilverbronze"><%= cheese.medal %></td>
						<td class="results_table_options_cell">
							<a href="/view_ratings?public_id=<%=cheese.public_id%>" class="btn btn-primary">Bírálatok</a>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
		<% } %>
	</main>

	<%- include('footer') %>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>