<!DOCTYPE html>
<html lang="hu">

<head>
	<!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Regisztráció | Sajtbíra</title>
	<link rel="icon" type="image/x-icon" href="/assets/css/MSE_1_32x32.png">

	<script src="/assets/scripts/registration/registration.js" defer></script>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/style_2.css">
</head>

<body>
	<%- include('header_unauthenticated') %>

	<main>
		<%- include('feedback') %>
		<div class="container">
			<div class="row">
				<div class="col-0 col-md-0 col-lg-3"></div>

				<div class="col-12 col-md-12 col-lg-6">

					<form autocomplete="new-password" class="row g-3" action="/registration" method="POST">
						<div class="h3 mb-3 fw-normal">Regisztráció</div>
						<div class="col-12">
							<label for="email" class="form-label">E-mail cím:</label>
							<input autocomplete="new-password" type="email" class="form-control" id="email" name="email" placeholder="jakab.gipsz@gmail.com" value="<%= locals?.registration?.email ?? "" %>" required>
						</div>

						<div class="col-sm-6">
							<label class="form-label" for="password">Jelszó: <span style="color:red;font-weight:bold">*</span>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" data-bs-toggle="tooltip" title="Tartalmazzon kisbetűt, nagybetűt, számot, min. 8, max. 25 karaktert!" viewBox="0 0 16 16">
									<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
									<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
								</svg>
							</label>

							<!-- kisbetű, nagybetű, szám, min 8, max 25 karakter -->
							<input autocomplete="new-password" class="form-control" type="password" id="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,25}" placeholder="Jelszó" required>
						</div>

						<div class="col-sm-6">
							<label class="form-label" for="confirm_password">Jelszó mégegyszer: <span style="color:red;font-weight:bold">*</span>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" data-bs-toggle="tooltip" title="Tartalmazzon Kisbetűt, nagybetűt, számot, min. 8, max. 25 karaktert!" viewBox="0 0 16 16">
									<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
									<path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path>
								</svg>
							</label>
							<input autocomplete="new-password" class="form-control" type="password" id="confirm_password" name="confirm_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,25}" placeholder="Jelszó mégegyszer" required>
						</div>

						<div class="col-sm-12">
							<label class="form-label" for="full_name">Teljes név: <span style="color:red;font-weight:bold">*</span></label>
							<input autocomplete="new-password" class="form-control" class="form-control" type="text" id="full_name" name="full_name" placeholder="Gipsz Jakab" required value="<%= locals?.registration?.full_name ?? "" %>">
						</div>

						<div class="col-12 text-center">
							<button class="w-50 btn btn-lg btn-primary" type="submit">Regisztráció</button>
						</div>
					</form>

					<div class="link">
						<a href="/login">Van már fiókod? Jelentkezz be itt.</a>
					</div>

				</div>

				<div class="col-0 col-md-0 col-lg-3"></div>

			</div>

		</div>

	</main>

	<%- include('footer') %>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

	<script>
		// Initialize tooltips
		var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
		var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
			return new bootstrap.Tooltip(tooltipTriggerEl)
		})
	</script>

</body>

</html>