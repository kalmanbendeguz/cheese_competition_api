<!DOCTYPE html>
<html lang="<%= lang %>" class="notranslate" translate="no">

<head>
	<meta name="google" content="notranslate">
	<!-- Required meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" type="image/x-icon" href="/static/images/MSE_1_32x32.png">

	<title><%= dict[lang].login_page_title %> | <%= dict[lang].application_name %></title>

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="/static/css/normalize.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" onerror="this.onerror=null;this.removeAttribute('integrity');this.href='/static/css/cached/bootstrap.min.css';">
	<link rel="stylesheet" href="/static/css/style.css">

    <%- include('barion_pixel_base') %>
</head>

<body class="text-center">
	<div>
		<%- include('header_unauthenticated') %>
	</div>

	<main class="form-signin">
		<%- include('feedback') %> 
		<div class="h3 mb-3 fw-normal"><%= dict[lang].please_sign_in %></div>
		<div class="link mb-3">
			<a href="/forget_password"><%= dict[lang].forget_password_link_text %></a>
		</div>
		<form action="/login" method="POST">
			<div class="form-floating">
				<input class="form-control" type="email" id="email" name="email" placeholder="<%= dict[lang].email_input_placeholder %>" required value="<%= locals?.context?.email ?? "" %>">
				<label class="form-label" for="floatingInput"><%= dict[lang].email_input_label %></label>
			</div>

			<div class="form-floating">
				<input class="form-control" type="password" id="password" name="password" placeholder="<%= dict[lang].password_input_placeholder %>" required>
				<label for="password"><%= dict[lang].password_input_label %></label>
			</div>

			<button class="w-100 btn btn-lg btn-primary" type="submit"><%= dict[lang].login_button_text %></button>
		</form>

		<div class="link mt-3">
			<a href="/registration"><%= dict[lang].registration_link_text %></a>
		</div>


	</main>

	<%- include('footer') %>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous" onerror="this.onerror=null;this.removeAttribute('integrity');this.href='/static/scripts/cached/bootstrap.bundle.min.js';"></script>

</body>

</html>